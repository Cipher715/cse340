<% if (title) { %>
    <h1 class="login-Title"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% if (messages) { %>
    <%- messages() %>
    <%}%> 

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>
<form action="/account/register" method="post" class="register-form">
    <fieldset>
        <legend>All fields are REQUIRED!!</legend>
        <p>First name:</p>
        <input type="text" name="account_firstname" id="account_firstname" required>
        <p>Last name:</p>
        <input type="text" name="account_lastname" id="account_lastname" required>
        <p>Email:</p>
        <input type="email" name="account_email" id="account_email" placeholder="someone@gmail.com" required>
        <p>Password:</p>
        <input type="text" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <p>Password must have 12 characters minimum, at least 1 capital letter, 1 number, and 1 special character.</p>

        <div class="register"><input type="submit" value="Register"></div>
    </fieldset>
</form>