<% if (title) { %>
    <h1 class="add-classification-title"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<% if (messages) { %>
    <%- messages() %>
<%}%> 

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
<% } %>

<form action="/inv/add-classification" method="post" class="add-class-form">
    <fieldset>
        <label for="classification_name">Classification Name:</label>
        <p>Name must be alphabetic characters only.</p>
        <input type="text" name="classification_name" id="classification_name" required pattern="[a-zA-Z]+">
        <div class="add-class"><input type="submit" value="Add Classification"></div>

    </fieldset>
</form>